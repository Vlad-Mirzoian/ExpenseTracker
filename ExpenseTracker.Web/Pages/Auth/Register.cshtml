@page
@model ExpenseTracker.Web.Pages.Auth.RegisterModel

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Реєстрація</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<div class="min-h-screen flex items-center justify-center bg-gray-100 bg-cover bg-center">
    <div class="bg-white bg-opacity-90 p-6 rounded-lg shadow-xl w-full max-w-md">
        <h2 class="text-2xl font-semibold text-gray-900 mb-6 text-center">Реєстрація</h2>
        <form method="post" class="space-y-4">
            @Html.AntiForgeryToken()
            <div>
                <label for="Login" class="block text-sm font-medium text-gray-700">Логін</label>
                <input type="text" id="Login" name="Login" value="@Model.Login" class="mt-1 w-full border border-gray-300 rounded-md px-4 py-3 text-base focus:outline-none focus:ring-2 focus:ring-blue-500" required aria-required="true" placeholder="Логін" maxlength="25" pattern="[a-zA-Z0-9_-]+" title="Логін може містити лише літери, цифри, підкреслення або дефіси" />
                @Html.ValidationMessageFor(m => m.Login, "", new { @class = "text-red-600 text-sm mt-1" })
            </div>
            <div>
                <label for="Password" class="block text-sm font-medium text-gray-700">Пароль</label>
                <input type="password" id="Password" name="Password" class="mt-1 w-full border border-gray-300 rounded-md px-4 py-3 text-base focus:outline-none focus:ring-2 focus:ring-blue-500" required aria-required="true" placeholder="Пароль" maxlength="25" pattern="(?=.*[A-Za-z])(?=.*\d).+" title="Пароль має містити принаймні одну літеру та одну цифру" />
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-red-600 text-sm mt-1" })
            </div>
            <div>
                <label for="Token" class="block text-sm font-medium text-gray-700">Токен</label>
                <input type="text" id="Token" name="Token" value="@Model.Token" class="mt-1 w-full border border-gray-300 rounded-md px-4 py-3 text-base focus:outline-none focus:ring-2 focus:ring-blue-500" required aria-required="true" placeholder="Токен" title="Токен має бути від 10 до 50 символів" />
                @Html.ValidationMessageFor(m => m.Token, "", new { @class = "text-red-600 text-sm mt-1" })
                <div class="text-xs text-gray-500 mt-1">
                    <a href="https://api.monobank.ua/index.html" target="_blank" class="block mt-4 text-center text-blue-600 hover:text-blue-700 hover:underline">Дізнатися токен</a>
                </div>
            </div>
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <p id="errorMessage" class="text-red-600 text-sm">@Model.ErrorMessage</p>
            }
            <button type="submit" class="w-full bg-blue-600 text-white px-4 py-3 rounded-md hover:bg-blue-700 transition focus:outline-none focus:ring-2 focus:ring-blue-500">Зареєструватися</button>
        </form>
        <a href="/Auth/Login" class="block mt-4 text-center text-blue-600 hover:text-blue-700 hover:underline">Вже є акаунт? Увійти</a>
    </div>
</div>