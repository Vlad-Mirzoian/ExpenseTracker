    <script>
        function toggleSidebar() {
            document.querySelector('.sidebar').classList.toggle('active');
        }

        function toggleCreateCategoryModal() {
            const modal = document.getElementById('createCategoryModal');
            modal.classList.toggle('hidden');
            const content = modal.querySelector('.modal-content');
            content.classList.toggle('scale-95');
            content.classList.toggle('scale-100');
        }

        function toggleEditCategoryModal() {
            console.log('Toggling edit modal');
            const modal = document.getElementById('editCategoryModal');
            if (!modal) {
                console.error('Edit modal element not found');
                return;
            }
            modal.classList.toggle('hidden');
            const content = modal.querySelector('.modal-content');
            if (content) {
                content.classList.toggle('scale-95');
                content.classList.toggle('scale-100');
            }
            if (modal.classList.contains('hidden')) {
                const nameInput = document.getElementById('EditCategoryName');
                const idInput = document.getElementById('EditCategoryId');
                if (nameInput) nameInput.value = '';
                if (idInput) idInput.value = '';
                const checkboxes = document.querySelectorAll('#editCategoryModal input[name="BaseCategoryIds"]');
                checkboxes.forEach(cb => cb.checked = false);
            }
        }

        function openEditCategoryModal(categoryId, name, baseCategoryIds) {
            console.log('Opening edit modal:', { categoryId, name, baseCategoryIds });
            const idInput = document.getElementById('EditCategoryId');
            const nameInput = document.getElementById('EditCategoryName');
            if (!idInput || !nameInput) {
                console.error('Edit modal inputs not found:', { idInput, nameInput });
                return;
            }
            idInput.value = categoryId;
            nameInput.value = name;
            const idsArray = (baseCategoryIds || '').split(',').filter(id => id.trim());
            console.log('Parsed baseCategoryIds:', idsArray);
            const checkboxes = document.querySelectorAll('#editCategoryModal input[name="BaseCategoryIds"]');
            checkboxes.forEach(cb => {
                cb.checked = idsArray.includes(cb.value);
            });
            toggleEditCategoryModal();
        }

        function toggleChangeCredentialsModal() {
            console.log('Toggling change credentials modal');
            const modal = document.getElementById('changeCredentialsModal');
            if (!modal) {
                console.error('Change credentials modal not found');
                return;
            }
            modal.classList.toggle('hidden');
            const content = modal.querySelector('.modal-content');
            if (content) {
                content.classList.toggle('scale-95');
                content.classList.toggle('scale-100');
            }
            if (modal.classList.contains('hidden')) {
                const form = document.getElementById('changeCredentialsForm');
                if (form) form.reset();
                const error = document.getElementById('changeCredentialsError');
                if (error) error.textContent = '';
            }
        }

        document.getElementById('changeCredentialsForm').addEventListener('submit', async function(event) {
            event.preventDefault();
            const form = event.target;
            const formData = new FormData(form);
            console.log('Submitting change credentials form:', Object.fromEntries(formData));

            try {
                const response = await fetch(form.action, {
                    method: 'POST',
                    body: formData
                });

                if (response.redirected) {
                    console.log('Redirecting to:', response.url);
                    toggleChangeCredentialsModal();
                    window.location.href = response.url;
                } else {
                    const html = await response.text();
                    const parser = new DOMParser();
                    const doc = parser.parseFromString(html, 'text/html');
                    const errorElement = doc.querySelector('#changeCredentialsError');
                    const localErrorElement = document.querySelector('#changeCredentialsError');
                    if (localErrorElement) {
                        localErrorElement.textContent = errorElement ? errorElement.textContent : 'Помилка при збереженні';
                        localErrorElement.classList.remove('hidden');
                    }
                    console.log('Form submission failed, error displayed');
                }
            } catch (error) {
                console.error('Submission error:', error);
                const localErrorElement = document.querySelector('#changeCredentialsError');
                if (localErrorElement) {
                    localErrorElement.textContent = 'Помилка: ' + error.message;
                    localErrorElement.classList.remove('hidden');
                }
            }
        });

        document.addEventListener('DOMContentLoaded', function () {
            const isCategorySelected = '@Request.Query.ContainsKey("id")' === 'True';

            if (isCategorySelected) {
                const expenseDescLabels = @Html.Raw(Json.Serialize(Model.ExpenseDescriptionChartData.Select(t => t.Description)));
