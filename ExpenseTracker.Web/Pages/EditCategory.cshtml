@page
@model ExpenseTracker.Web.Pages.EditCategoryModel

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Редагування Категорії</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f9f9f9;
            margin: 0;
            padding: 20px;
        }

        h1, h2, h3 {
            font-size: 24px;
            color: #333;
            text-align: center;
        }

        .container {
            width: 100%;
            max-width: 800px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                display: block;
                font-size: 18px;
                margin-bottom: 8px;
                color: #555;
            }

            .form-group input {
                width: 100%;
                padding: 12px;
                font-size: 16px;
                border: 1px solid #ccc;
                border-radius: 8px;
                background-color: #f4f4f4;
                transition: border-color 0.3s ease;
            }

                .form-group input:focus {
                    border-color: #4CAF50;
                    background-color: #fff;
                }

        .transaction-list {
            margin-top: 30px;
            max-height: 300px;
            overflow-y: auto;
        }

        .transaction-item {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
            background-color: #fafafa;
            padding: 12px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s;
        }

            .transaction-item:hover {
                background-color: #f0f0f0;
            }

            .transaction-item input {
                margin-right: 10px;
                transform: scale(1.2);
            }

            .transaction-item label {
                font-size: 16px;
                color: #333;
                flex-grow: 1;
            }

        .btn {
            display: block;
            width: 100%;
            padding: 12px;
            font-size: 18px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn:hover {
                background-color: #45a049;
            }

        .text-danger {
            color: #d9534f;
            font-size: 16px;
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Редагування Категорії</h1>

        <form method="post" asp-page-handler="OnPostAsync" asp-route-id="@Model.Category?.Id">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Category.Id" value="@Model.Category?.Id" />

            <div class="form-group">
                <label for="CategoryName">Назва Категорії</label>
                <input type="text" id="CategoryName" name="Category.Name" value="@Model.Category?.Name" class="form-control" required />
            </div>

            <h3>Транзакції</h3>
            <div class="transaction-list">
                @if (Model.Transactions != null)
                {
                    foreach (var transaction in Model.Transactions)
                    {
                        <div class="transaction-item">
                            <input type="checkbox" id="transaction_@transaction.Id" name="SelectedTransactionIds" value="@transaction.Id"
                            @(Model.SelectedTransactionIds?.Contains(transaction.Id) == true ? "checked" : "") />
                            <label for="transaction_@transaction.Id">
                                @transaction.Description - @transaction.Amount грн - @transaction.Date.ToString("dd.MM.yyyy")
                            </label>
                        </div>
                    }
                }
                else
                {
                    <div>No transactions found.</div>
                }
            </div>

            <button type="submit" class="btn">Зберегти</button>
        </form>

        @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
        {
            <div class="text-danger">@error.ErrorMessage</div>
        }
    </div>
</body>
</html>
